{
  "manifest_version": 3,
  "name": "Mastodon Plus",
  "description": "Mastodon on steroids",
  "version": "1.0.0",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "32": "icons/32.png",
    "24": "icons/24.png",
    "16": "icons/16.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/128.png",
      "48": "icons/48.png",
      "32": "icons/32.png",
      "24": "icons/24.png",
      "16": "icons/16.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ]
}
